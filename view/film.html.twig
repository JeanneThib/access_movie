{% extends 'index.html.twig' %} 



{% block content %}

    {% for film in films %}
    <div class="d-flex flex-row"> 
        <div class="image">
            <img src="{{film.image_film}}" alt="img"> 
            </div>
        <section class="contenue">
            <div>
                <h1>{{film.titre}}</h1>
            </div>
            <div>
            <p>{{film.genre}}</p>
            </div>
            <div>
                <p>{{film.description}}</p>
            </div>
            <div>
                <p>{{film.annee}}</p>
            </div>
            <div>
                <p>{{film.realisateur}}</p>
            </div>
            <div>
                <p>{{film.acteur}}</p>
            </div>
        </section>
    </div>

    {% endfor %}

{%  endblock %}

{% block menugenre %}
            <section class="container-fluid justify-content-center affichage_genre row" >
                {% for genre in genres %}
                <a href="films/genre/{{genre.id}}">{{genre.type}}</a>
                {% endfor %}

            </section>
{%  endblock %}
  